#!/bin/bash

/sbin/service kafka status >/dev/null
if [ "$?" = "1" ]; then
  echo {\"kafka_status\":0}
else
  kafkastatus=`netstat -an |grep 9092 |grep LISTEN |wc -l`
  if [ `netstat -an |grep 9092 |grep LISTEN |wc -l` = "1" ]; then
        echo {\"kafka_status\":1}
  else
    echo {\"kafka_status\":0}
  fi
fi